#pragma once

namespace TurnipRenderer {
	Scene::Scene(Context& context) : ContextAware(context), Heirarchy<SceneObject>(
		std::make_unique<SceneObject>(context, *this, "ROOT", glm::vec3(0))
			){}
	
	template<typename... Args>
	SceneObject* Scene::addObjectToIndexOfObject(SceneObject& newParent, int relSiblingIndex, Args... args){
		return (SceneObject*)Heirarchy<SceneObject>::addNode(
			std::make_unique<SceneObject>(context, *this, args...),
			&newParent, relSiblingIndex
			);
	}
}
